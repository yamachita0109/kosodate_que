<% content_for :title, "#{@user.name}のプロフィール" %>

<section class="container md:w-3/4 lg:w-1/2 mx-auto flex flex-wrap">
  <div class="w-full flex flex-col">
    <div class="bg-white shadow m-4 p-4 flex flex-col items-center">
      <img class="w-28 h-28 rounded-full mb-3" src="<%= @user.logo %>" alt="logo">
      <p class="text-xl outline-none text-gray-700 py-1 px-3 leading-8 mb-3">
        <%= @user.name %>
      </p>

      <div class="flex space-x-4">
        <% unless @user.facebook_id.blank? %>
          <a
            href="https://www.facebook.com/<%= @user.facebook_id %>"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="currentColor"
              style="color: #1877f2"
              viewBox="0 0 24 24">
              <path
                d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
            </svg>
          </a>
        <% end %>

        <% unless @user.instagram_id.blank? %>
          <a
            href="https://www.instagram.com/<%= @user.instagram_id %>"
            target="_blank"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-7 w-7"
              fill="currentColor"
              style="color: #c13584"
              viewBox="0 0 24 24">
