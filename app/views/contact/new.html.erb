<% content_for :title, 'お問い合わせ' %>

<div class="container px-5 py-24 mx-auto">
  <section class="lg:w-1/2 md:w-2/3 mx-auto">
    <%= render partial: 'layouts/h1', locals: { h1: 'お問い合わせ' } %>
    <%= form_with local: true do |form| %>
      <div class="relative mb-8">
        <label class="leading-7 text-sm text-gray-600">メールアドレス</label>
        <%=
          form.email_field :email,
          maxlength: 255,
          required: true,
          :value => current_user.nil? ? '' : current_user.email,
          class: "w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out"
        %>
      </div>

      <div class="relative mb-8">
        <%= form.select :type,
          ['本サイトについて', '広告掲載', '質問削除依頼', 'その他'],{},
          class: "w-1/2 border border-gray-300 text-gray-900 text-sm rounded focus:ring-green-200 focus:border-green-500 block p-2.5"
        %>
      </div>

      <div class="relative mb-8">
        <label class="leading-7 text-sm text-gray-600">お問い合わせ内容</label>
        <%=
          form.text_area :content,
          maxlength: 2000,
          required: true,
          class: "w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 h-96 text-base outline-none text-gray-700 py-1 px-3 resize-none leading-6 transition-colors duration-200 ease-in-out"
        %>
      </div>

      <button
        type="submit"
        class="text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded text-lg focus:ring-4 focus:outline-none focus:ring-green-300"
      >お問い合わせする</button>
    <% end %>
  </section>
</div>