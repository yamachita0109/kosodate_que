<%= form_with local: true, method: :get do |form| %>
  <div class="container mx-auto flex flex-wrap py-6">
    <div class="w-full md:w-6/12 flex flex-col px-3 my-2">
      <%=
        form.text_field :text,
        :value => params[:text],
        class: "w-full bg-white rounded border border-gray-300 focus:border-green-500 focus:ring-2 focus:ring-green-200 text-base outline-none text-gray-700 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out",
        placeholder: 'キーワードで検索'
      %>
    </div>
    <div class="w-1/2 md:w-3/12 flex flex-col px-3 my-2">
      <%= form.select :filter,
        [['新着', ''], ['未回答', 'no_answer'], ['解決済', 'done'], ['未解決', 'open']],
        { selected: params[:filter] },
        :onchange => 'submit(this.form)',
        class: "border border-gray-300 text-gray-900 text-sm rounded focus:ring-green-200 focus:border-green-500 block w-full p-2.5"
      %>
    </div>
    <div class="w-1/2 md:w-3/12 flex flex-col px-3 my-2">
      <button type=submit class="flex items-center mt-auto text-white bg-green-500 border-0 py-2 px-4 w-full focus:outline-none hover:bg-green-600 rounded text-lg">
        <svg class="w-4 h-4 mr-2" style="fill: #FFF;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
        検索
      </button>
    </div>
  </div>
<% end %>
